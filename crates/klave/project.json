{
    "name": "crate",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "tags": [
        "crate"
    ],
    "targets": {
        "deps": {
            "command": "cargo install --locked cargo-component",
            "cache": true,
            "inputs": [
                "{workspaceRoot}/Cargo.toml",
                "{workspaceRoot}/Cargo.lock",
                "{projectRoot}/Cargo.toml"
            ]
        },
        "build": {
            "dependsOn": [
                "deps"
            ],
            "command": "rimraf target && cargo component build -p klave --target-dir crates/klave/target --release",
            "cache": true,
            "outputs": [
                "{projectRoot}/target"
            ]
        },
        "publish": {
            "dependsOn": [
                "build"
            ],
            "command": "cargo publish -p klave",
            "cache": false
        }
    }
}