{
    "name": "compiler",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/compiler/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/compiler",
                "main": "libs/compiler/src/index.ts",
                "tsConfig": "libs/compiler/tsconfig.lib.json",
                "assets": [
                    "libs/compiler/*.md"
                ],
                "generateExportsField": true
            },
            "configurations": {
                "development": {
                    "watch": true
                }
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs compiler {args.ver} {args.tag}",
            "dependsOn": [
                "build"
            ]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/compiler/jest.config.ts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "compiler:build"
                ]
            }
        }
    },
    "tags": []
}