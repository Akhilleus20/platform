{
    "name": "hubber",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/hubber/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/apps/hubber",
                "format": [
                    "esm"
                ],
                "bundle": true,
                "main": "apps/hubber/src/main.ts",
                "tsConfig": "apps/hubber/tsconfig.app.json",
                "assets": [
                    "apps/hubber/src/assets"
                ],
                "external": [
                    "@klave/as-json"
                ],
                "generatePackageJson": true,
                "esbuildOptions": {
                    "sourcemap": true,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "configurations": {
                "development": {
                    "watch": true
                },
                "production": {
                    "optimization": true,
                    "minify": true,
                    "bundle": true,
                    "extractLicenses": true,
                    "generateLockfile": true,
                    "generatePackageJson": true,
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "hubber:build"
            },
            "configurations": {
                "development": {
                    "watch": true,
                    "buildTarget": "hubber:build:development"
                },
                "production": {
                    "buildTarget": "hubber:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "apps/hubber/**/*.ts",
                    "apps/hubber/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "apps/hubber/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "hubber:build"
                ]
            }
        },
        "docker-build": {
            "dependsOn": [
                {
                    "target": "build"
                },
                {
                    "target": "build",
                    "projects": "ui"
                }
            ],
            "command": "docker build -f apps/hubber/Dockerfile . -t hubber:latest"
        }
    },
    "tags": []
}